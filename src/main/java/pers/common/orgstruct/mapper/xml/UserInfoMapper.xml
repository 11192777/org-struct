<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.common.orgstruct.mapper.UserInfoMapper">
  <resultMap id="BaseResultMap" type="pers.common.orgstruct.entity.UserInfo">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="oid" jdbcType="VARCHAR" property="oid" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="phone_number" jdbcType="VARCHAR" property="phoneNumber" />
    <result column="login_account" jdbcType="VARCHAR" property="loginAccount" />
    <result column="login_password" jdbcType="VARCHAR" property="loginPassword" />
    <result column="created_date" jdbcType="TIMESTAMP" property="createdDate" />
    <result column="created_by" jdbcType="BIGINT" property="createdBy" />
    <result column="last_modified_date" jdbcType="TIMESTAMP" property="lastModifiedDate" />
    <result column="last_modified_by" jdbcType="BIGINT" property="lastModifiedBy" />
  </resultMap>
  <sql id="Base_Column_List">
    id,
    oid,
    user_name,
    phone_number,
    login_account,
    login_password,
    created_date,
    created_by,
    last_modified_date,
    last_modified_by
  </sql>
  <!--UserInfo queryUser(String account, String password);-->
  <select id="queryUser" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from
        os_user_info
    where
        login_account = #{phoneNumber} and login_password = #{password}
  </select>

</mapper>